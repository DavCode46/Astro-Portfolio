  //   href: "#top",
  //   icon: HomeIcon,
  // },
  {
    name: "Projectos",
    label: "proyectos",
    href: "#projects",
    icon: ProjectsIcon,
  },
  {
    name: "Experiencia",
    label: "experiencia",
    href: "#experience",
    icon: BriefcaseIcon,
  },
  {
    name: "Estudios",
    label: "estudios",
    href: "#education",
    icon: BookIcon,
  },
  {
    name: "Sobre m√≠",
