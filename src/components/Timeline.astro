---
const { data } = Astro.props
---


<ol class="relative border-s border-gray-200 dark:border-gray-700 ml-4">
    {
      data.map((item: any) => (
        <li class="mb-10 ms-4">
          <div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700 bg-[#1890ff]"></div>
          <h2 class="text-xl font-semibold text-[#1890ff]">
            {item.title}
          </h2>
          <h3 class="text-lg font-semibold text-black/80">
              {item.company}
          </h3>
          <time class="mb-1 text-sm font-normal leading-none text-black/50">
            {item.date}
          </time>
          <p class="mb-4 text-base font-normal text-gray-500 mt-4 md:w-2/3">
            {item?.responsibilities}
          </p>
        </li>
      ))
    }
  </ol>