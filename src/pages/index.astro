---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Container from "../components/Container.astro";
import Experience from "../components/Experience.astro";
import Education from "../components/Education.astro";
import Projects from "../components/Projects.astro";
import About from "../components/About.astro";
import BriefcaseIcon from "../icons/BriefcaseIcon.astro";
import BookIcon from "../icons/BookIcon.astro";
import ProjectsIcon from "../icons/ProjectsIcon.astro";
import UserIcon from "../icons/UserIcon.astro";
---

<Layout
  title="Portfolio de David Menéndez - Desarrollador y programador web"
  description="Contrata a David Menéndez Blanco para crear tu aplicación web. Especializado en crear aplicaciones con tecnologías modernas y buenas prácticas"
>
  <main class="px-3">
    <Container id="inicio">
      <Hero />
    </Container>

    <Container id="projects">
      <div class="flex items-center gap-4 mb-5">
        <ProjectsIcon class="size-8" />
        <h2 class="text-2xl font-semibold">Proyectos</h2>
      </div>
      <Projects />
    </Container>

    <Container id="experience">
      <div class="flex items-center gap-4 mb-5">
        <BriefcaseIcon class="size-8" />
        <h2 class="text-2xl font-semibold">Experiencia Laboral</h2>
      </div>
      <Experience />
    </Container>

    <Container id="education">
      <div class="flex items-center gap-4 mb-5">
        <BookIcon class="size-8" />
        <h2 class="text-2xl font-semibold">Estudios</h2>
      </div>
      <Education />
    </Container>

    <Container id="about">
      <div class="flex items-center gap-4 mb-5">
        <UserIcon class="size-8" />
        <h2 class="text-2xl font-semibold">Sobre mí</h2>
      </div>
      <About />
    </Container>
  </main>
</Layout>

